<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dip"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/view_browse_peer_header_text_title"
            style="@style/MainFragmentSimpleHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_title" />

        <TextView
            android:id="@+id/view_browse_peer_header_text_total"
            style="@style/BrowsePeerFragmentFileCounterHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dip"
            android:text="@null" />
    </LinearLayout>

    <TextView
        android:id="@+id/view_browse_peer_header_text_total_unshared"
        style="@style/BrowsePeerFragmentFileCounterHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:drawableRight="@drawable/padlock_locked_header_icon"
        android:text="@null" />

    <TextView
        android:id="@+id/view_browse_peer_header_text_total_shared"
        style="@style/BrowsePeerFragmentFileCounterHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view_browse_peer_header_text_total_unshared"
        android:clickable="true"
        android:drawableRight="@drawable/padlock_unlocked_header_icon"
        android:text="@null" />

</RelativeLayout>